<html>

<head>


    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@300&display=swap" rel="stylesheet">
    <script src="../js/jquery.js"></script>
    <link rel="stylesheet" href="../_bootstrap-4.5.0-dist/js/bootstrap.min.js">
    <link rel="stylesheet" href="../_bootstrap-4.5.0-dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="../css/general.css">
    <link rel="stylesheet" href="../css/inicio.css">


</head>

<body class="container">
    <div class="row justify-content-center">

        <div class="col-3 justify-content-center coloreado" id="principal">
            <div id="cabecera" class="row justify-content-center">
                <h1>Registrar</h1>
            </div>
            <% if (messages.error) { %>
                <%=messages.error%>

                    <%}%>
                        <div class="row justify-content-center">
                            <form id="formulario" action="/registrar" method="post">
                                <div class="label">
                                    <label class="col-4" for="nombre">Nombre</label>
                                    <input class="col-7" type="text" id="name" name="name" required>
                                </div>
                                <div class="label">
                                    <label class="col-4" for="email">Email</label>
                                    <input class="col-7" type="email" id="email" name="email" required>
                                </div>
                                <div class="label">
                                    <label class="col-4" for="contraseña">Contraseña</label>
                                    <input class="col-7" type="password" id="password" name="password" required>
                                </div>
                                <div id="botones">
                                    <button class="btn btn-light float-left" type="submit">Registrar</button>
                                    <a class="btn btn-light float-right" href="/">Login</a>
                                </div>
                            </form>
                        </div>
        </div>
    </div>
</body>

</html>